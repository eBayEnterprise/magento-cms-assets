<?xml version="1.0"?>
<config>
	<modules>
		<EbayEnterprise_CmsAssets>
			<version>1.0.0</version>
		</EbayEnterprise_CmsAssets>
	</modules>

	<global>
		<resources>
			<ebayenterprise_cmsassets_setup>
				<setup>
					<module>EbayEnterprise_CmsAssets</module>
				</setup>
			</ebayenterprise_cmsassets_setup>
		</resources>

		<helpers>
			<ebayenterprise_cmsassets>
				<class>EbayEnterprise_CmsAssets_Helper</class>
			</ebayenterprise_cmsassets>
		</helpers>

		<models>
			<enterprise_cms>
				<rewrite>
					<page_revision>EbayEnterprise_CmsAssets_Model_Page_Revision</page_revision>
				</rewrite>
			</enterprise_cms>
		</models>
	</global>

	<frontend>
		<layout>
			<updates>
				<ebayenterprise_cmsassets>
					<file>ebayenterprise_cmsassets.xml</file>
				</ebayenterprise_cmsassets>
			</updates>
		</layout>
	</frontend>

	<adminhtml>
		<events>
			<adminhtml_cms_page_edit_tab_design_prepare_form>
				<observers>
					<ebayenterprise_cmsassets_page_edit_tab_design_prepare_form>
						<type>singleton</type>
						<class>EbayEnterprise_CmsAssets_Model_Observer</class>
						<method>pageAdminEditTabDesignPrepareForm</method>
					</ebayenterprise_cmsassets_page_edit_tab_design_prepare_form>
				</observers>
			</adminhtml_cms_page_edit_tab_design_prepare_form>

			<controller_action_layout_generate_blocks_after>
				<observers>
					<ebayenterprise_cmsassets_layout_generate_blocks_after>
						<type>singleton</type>
						<class>EbayEnterprise_CmsAssets_Model_Observer</class>
						<method>pageAdminAddJavascriptBlock</method>
					</ebayenterprise_cmsassets_layout_generate_blocks_after>
				</observers>
			</controller_action_layout_generate_blocks_after>
		</events>
	</adminhtml>
</config>
